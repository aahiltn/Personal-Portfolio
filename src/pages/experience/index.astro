---
import Card from "../../components/base/card.astro";
import experiences from "../../data/experiences.json";
import type { Project } from "../../types";
import Layout from "../../layouts/Layout.astro";
import { ViewTransitions } from "astro:transitions";
import SimpleMenu from "../../components/SimpleMenu.astro";
---

<Layout
  title="Experiences - Aahil Nishad"
  description="My professional experiences and career journey"
>
  <ViewTransitions />
  <SimpleMenu currentPage="experiences" />
  <div
    class="underline font-[Schoolbell] font-extrabold p-4 text-4xl dark:text-gray-200 text-center"
  >
    Experiences
  </div>
  <div class="flex flex-wrap justify-center gap-2">
    {
      experiences.map((project: Project, index: number) => (
        <Card
          key={index}
          title={project.title}
          description={project.description}
          dates={project.dates}
          image={project.image}
          company={project.company}
          location={project.location}
          stack={project.stack}
          link={project.link}
        />
      ))
    }
  </div>
</Layout>
