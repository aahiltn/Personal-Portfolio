---
import Instax from "../components/instax.jsx";
import Bio from "../components/bio.astro";
import Menu from "../components/menu";
import Carousel from "../components/carousel.astro";
import projects from "../data/projects.json";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="space-y-14 scroll-smooth pb-24 w-full">
    <div
      class="flex flex-col md:flex-row gap-6 md:px-0 md:m-20 md:mt-20 md:justify-around"
    >
      <div class="md:hidden">
        <Menu client:load />
      </div>

      <div class="flex justify-center md:justify-start">
        <Instax client:load />
      </div>

      <!-- Content Column -->
      <div class="flex flex-col gap-3">
        <!-- Menu - hidden on mobile, shows here on desktop -->
        <div class="hidden md:block">
          <Menu client:load />
        </div>

        <!-- Bio and Projects Container -->
        <div class="flex flex-col gap-4 md:gap-3 md:p-3">
          <!-- Bio -->
          <div
            class="bg-stone-100 text-black dark:text-gray-200 w-full space-y-4 p-7 rounded-lg dark:bg-gray-800"
          >
            <Bio />
          </div>

          <!-- Projects -->
          <Carousel className="-ml-4" projects={projects.slice(0, 5)} />
        </div>
      </div>
    </div>
  </div>
</Layout>
