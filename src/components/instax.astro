---
import { Image } from 'astro:assets';
import pfp from '../images/pfp.jpg';
import left from '../images/left.png';
import right from '../images/right.jpg';

interface InstaxImage {
	[key: string]: ImageMetadata;
}

const images:InstaxImage = {
	"home": pfp,
	"left": left,
	"right": right,
};

const { direction } = Astro.props;
---

<div
	class="flex flex-col w-5/6 h-auto py-2 px-4 bg-white-500 text-black font-semibold rounded-lg shadow-md hover: focus:outline-md focus:ring-2 focus:ring-purple-400 focus:ring-opacity-75"
>
	<Image src={images[direction]} alt="aahil" class="py-4"></Image>
	<div class="my-4 text-xl flex justify-center">Aahil Nishad</div>
</div>


