---
const { title, image, dates, featuredPhoto } = Astro.props;
---

<a href="/projects">
  <div
    class="bg-white rounded-lg p-4 max-w-sm mx-auto group hover:scale-105 hover:-translate-y-2 hover:rotate-1 transition-all duration-300 border border-gray-200"
  >
    <!-- Photo -->
    <div class="relative bg-gray-100 rounded-md overflow-hidden">
      <div class="aspect-video relative overflow-hidden">
        <img
          src={featuredPhoto}
          alt={title}
          class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
        />
      </div>
    </div>

    <!-- Polaroid bottom space -->
    <div class="h-8 flex flex-row pt-3 align-middle">
      <h3
        class="font-[Schoolbell] text-gray-800 font-bold text-lg leading-tight flex-1 mr-3"
      >
        {title}, <span class="text-sm font-thin text-muted-foreground">
          {
            (() => {
              const matches = dates.match(/\d+/g);
              const lastNumber = matches ? matches[matches.length - 1] : "";
              return lastNumber;
            })()
          }
        </span>
      </h3>
      <img
        src={image}
        alt={`${title} logo`}
        class="-mt-1 w-8 h-8 object-contain"
      />
    </div>
  </div>
</a>
