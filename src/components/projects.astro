---
import Card from '../components/card.astro';
import LetsLink from '../images/projects/LetsLink_logo.svg'
import CarbonConnect from '../images/projects/CarbonConnect.svg'
import aahil from "/favicon.ico"
import tunul from "../images/projects/tunulLogo.png"
import narro from "../images/projects/narro.svg"
import platnm from "../images/projects/platnm.svg"
---   
<div class=`grid w-3/4 justify-center bg-[#e6be70] text-[#47342c] dark:text-gray-200 dark:bg-gray-800 rounded-md shadow-lg p-4
    delay-[0ms] duration-[600ms] taos:[transform:translate3d(0,200px,0)_scale(0.6)] taos:opacity-0` data-taos-offset="100" id="projects">
    <div class="font-[Schoolbell] font-extrabold p-4 text-4xl text-center">Projects</div>
    <div class="flex flex-wrap justify-center gap-2">
        <Card title="Platnm" description="The one-stop shop for all musical discourseâ€”bringing music reviews back to the masses." dates="Sep. 2024 - Dec. 2024" image={platnm} company="Generate Product Development" location="Boston, MA" stack={["React Native", "Go", "TypeScript", "Expo", "PostgreSQL + Supabase", "Fiber", "Nix", "Spotify API"]} link="https://github.com/GenerateNU/platnm" />
        <Card title="Narro" description="An AI-powered language assessment platform with image generation and automatic grading." location="Boston, MA" dates="Nov. 2024" image={narro} stack={["Next.js", "React", "GPT-4o", "Dall-E 3", "TypeScript", "Prisma ORM", "MongoDB Atlas"]} company="SiliconXL Launchathon"link="https://github.com/aahiltn/narro"/>
        <Card title="Portfolio Website" description="Built with love, an insight into my life. You're already here. Welcome aboard!" location="Danbury, CT" dates="Aug. 2024" image={aahil} stack={["Astro", "React", "Styled Components", "TypeScript", "JavaScript", "Tailwind"]} company="Me" link="/"/>
        <Card title="Carbon Connect" description="A carbon-emissions calculator and tracker for EU-based residents, companies, and organizations." location="Leuven, Belgium" dates="June 2024" image={CarbonConnect} stack={["Python", "MySQL", "Docker", "Streamlit", "Flask"]} company="Northeastern x KU Leuven" link="https://github.com/mehallhm/wafflers"/>
        <Card title="Let's Link" description="An easy, informal way to meet up with friends. Awarded Best Use of MongoDB Atlas by Major League Hacking." dates="Feb. 2024" location="Boston, MA" image={LetsLink} stack={["Next.js", "React", "MongoDB Atlas", "Google OAuth"]} company="HackBeanpot2024" link="https://letslink.club/"/>
        <Card title="tunul" description="A step-by-step tunnel navigation of the Northeastern University Boston Campus. Made simple." dates="Apr. 2024" location="Boston, MA" image={tunul} stack={["Next.js", "React", "Typescript", "Javascript", "JSON"]} company="Oasis at Northeastern" link="https://tunul.netlify.app/"></Card> 
    </div>
</div>
